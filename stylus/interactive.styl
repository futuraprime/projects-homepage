.main-title {
  @extend .sans;
  text-align: center;
  font-style: normal;
  text-transform: uppercase;
  letter-spacing: 10px;
  font-size: 1.5em;
}

.main-list {
  @extend .intro-text;
  
  ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  a:first-child {
    @extend .sans;
    text-decoration: none;
    color: c_red_2;
    
    text-transform: uppercase;
    letter-spacing: 0.17em;
    font-weight: 600;
    font-size: 1.25em;
    display: block;
    
    &:hover {
      color: c_red_1;
    }
  }
}
